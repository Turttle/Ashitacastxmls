			<waist>Witch Sash</waist>
			<ear1>Celestial Earring</ear1>
			<ear2>Astral Earring</ear2>
			<ring1>Ether Ring</ring1>
			<ring2>Serket Ring</ring2>
			<back>Invigorating Cape</back>
		</set>
		<set name="Healing" baseset="MND">
			<hands>Mahatma Cuffs</hands>
			<legs>Cleric's Pantaln.</legs>
			<neck>Fylgja Torque +1</neck>
			<ear1>Roundel Earring</ear1>			
		</set>
